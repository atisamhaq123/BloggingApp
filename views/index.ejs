<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./shared/header.ejs')%>
  </head>
  <body>
    <%- include('./shared/nav.ejs')%>

    <div class="container my-5">
      <!-- Hero Section -->
      <div class="text-center mb-5">
        <h1 class="text-primary fw-bold"><%= title %></h1>
        <p class="lead">Welcome to <%= title %></p>
      </div>

      <!-- Blogs Section -->
      <% if (blogs.length > 0) { %>
        <div class="row g-4">
          <% blogs.forEach(blog => { %>
          <div class="col-md-6 col-lg-4">
            <a href="/blogs/<%= blog._id %>" class="text-decoration-none text-dark">
              <div class="card shadow-sm h-100">
                
                <!-- Blog Image -->
              
                  <img src="https://blog.lulu.com/content/images/2024/12/print-book-beginners.jpg" class="card-img-top" alt="<%= blog.name %>">
               

                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <p class="card-text"><%= blog.description %></p>
                  <p class="text-muted small mt-auto">
                    Published on: <%= new Date(blog.createdAt).toLocaleDateString() %>
                  </p>
                   <p class="text-muted small mt-auto">
                    Published by: <%= blog.writer %>
                  </p>
                </div>
              </div>
            </a>
          </div>

          <% }) %>
        </div>
      <% } else { %>
        <div class="alert alert-info text-center">
          No blogs available yet. Check back soon!
        </div>
      <% } %>
    </div>

    <!-- <%- include('./shared/footer.ejs')%> -->
  </body>
</html>
