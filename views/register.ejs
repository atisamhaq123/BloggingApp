<%- include("./shared/header.ejs") %>
<link rel='stylesheet' href='/stylesheets/register.css' />

<div class="container-fluid">
  <div class="row full-height">
    <!-- Left Side: Intro -->
    <div class="col-md-6 intro-panel">
      <img src="images/logo.png" alt="Quillo Logo" class="mb-4" style="max-width: 150px;">
      <h1>Join <span class="text-info">Quillo</span></h1>
      <p class="typing-text">
        Create your account and start sharing your blogs, ideas, and stories with the world.
      </p>
    </div>

    <!-- Right Side: Register Form -->
    <div class="col-md-6 d-flex align-items-center justify-content-center">
      <div class="register-card w-75">
        <h3 class="text-center text-primary mb-4">Create Account</h3>
        <form id="registerForm">
          <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" id="username" name="username" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" required />
          </div>
          <button type="submit" class="btn btn-success w-100">Register</button>
        </form>
        <div id="errorMsg" class="text-danger text-center mt-3 d-none"></div>
        <p class="text-center mt-4 mb-0">
          Already have an account? <a href="/login">Login</a>
        </p>
      </div>
    </div>
  </div>
</div>


<script>
  document.querySelector("#registerForm").addEventListener("submit", async (e) => {
    e.preventDefault();

    const username = document.querySelector("#username").value.trim();
    const email = document.querySelector("#email").value.trim();
    const password = document.querySelector("#password").value.trim();
    const errorMsg = document.querySelector("#errorMsg");

    try {
      const res = await fetch("/auth/register", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ username, email, password }),
      });

      const data = await res.json();

      if (res.ok) {
        // Redirect to dashboard (or wherever you want new users to go)
        localStorage.setItem("user", data.user);
        window.location.href = "/";
      } else {
        errorMsg.textContent = data.error || "Registration failed!";
        errorMsg.classList.remove("d-none");
      }
    } catch (err) {
      console.error(err);
      errorMsg.textContent = "Something went wrong, try again.";
      errorMsg.classList.remove("d-none");
    }
  });
</script>
